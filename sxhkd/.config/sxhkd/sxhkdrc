# pause / unpause dunst
mod4 + backslash
       ;(pgrep -x dunst && dunstctl set-paused false)

@mod4 + backslash
      ; pgrep -x dunst && (sleep 0.3; [ $(dunstctl is-paused) = false ] && dunstctl set-paused true)

mod4 + shift + backslash
     pgrep -x dunst && dunstctl set-paused toggle

